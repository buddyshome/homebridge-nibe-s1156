{
  "name": "homebridge-nibe",
  "displayName": "Homebridge Nibe",
  "version": "0.0.1",
  "description": "Sample Platform plugin for Nibe services",
  "author": "Hubert Pruszynski <hubert.pruszynski@gmail.com>",
  "license": "Apache-2.0",
  "main": "dist/index.js",
  "scripts": {
    "lint-fix": "eslint --fix src/**.ts",
    "lint": "eslint src/**.ts",
    "watch": "npm run build && npm link && nodemon",
    "clean": "rimraf ./dist",
    "build": "rimraf ./dist && tsc",
    "prepublishOnly": "npm run lint && npm run build && npm version patch --m 'Release %s'",
    "postpublish": "npm run clean"
  },
  "keywords": [
    "homebridge-plugin",
    "nibe"
  ],
  "engines": {
    "node": ">=10.17.0",
    "homebridge": ">=1.3.0"
  },
  "dependencies": {
    "axios": "^0.26.1"
  },
  "devDependencies": {
    "homebridge-config-ui-x": "^4.42.0",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^4.0.0",
    "@typescript-eslint/parser": "^3.10.1",
    "eslint": "^8.12.0",
    "homebridge": "^1.4.0",
    "nodemon": "^2.0.15",
    "rimraf": "^3.0.2",
    "ts-node": "^10.6.0",
    "typescript": "^4.6.3"
  }
}
